{
   "name": "v5.chriskrycho.com",
   "version": "1.0.0",
   "description": "The fifth version of chriskrycho.com.",
   "main": "index.js",
   "repository": "git@github.com:chriskrycho/v5.chriskrycho.com.git",
   "author": "Chris Krycho <hello@chriskrycho.com>",
   "license": "MIT",
   "volta": {
      "node": "15.11.0",
      "npm": "7.6.3"
   },
   "devDependencies": {
      "@11ty/eleventy": "^0.11.1",
      "@types/cheerio": "^0.22.22",
      "@types/gulp-sass": "^4.0.0",
      "@types/luxon": "^1.25.0",
      "@types/markdown-it": "^10.0.2",
      "@types/markdown-it-anchor": "^4.0.4",
      "@types/markdown-it-container": "^2.0.3",
      "@types/node": "^14.14.2",
      "@types/sass": "^1.16.0",
      "@types/serve-static": "^1.13.6",
      "@types/uslug": "^1.0.0",
      "@typescript-eslint/eslint-plugin": "^4.8.1",
      "@typescript-eslint/parser": "^4.8.1",
      "cheerio": "^1.0.0-rc.3",
      "del": "^6.0.0",
      "eslint": "7.24.0",
      "eslint-config-prettier": "^6.15.0",
      "eslint-plugin-prettier": "^3.1.4",
      "gulp": "^4.0.2",
      "gulp-sass": "^4.1.0",
      "highlight.js": "^10.4.1",
      "luxon": "^1.25.0",
      "markdown-it": "^12.0.2",
      "markdown-it-abbr": "^1.0.4",
      "markdown-it-anchor": "^5.2.5",
      "markdown-it-deflist": "^2.0.3",
      "markdown-it-footnote": "^3.0.2",
      "markdown-it-implicit-figures": "^0.9.0",
      "markdown-it-sup": "^1.0.0",
      "prettier": "^2.2.0",
      "sass": "1.32.0",
      "striptags": "^3.1.1",
      "true-myth": "^4.1.1",
      "ts-node": "^8.6.2",
      "typescript": "^4.1.2",
      "typeset": "0.3.1",
      "uslug": "^1.0.4"
   },
   "eslintConfig": {
      "parser": "@typescript-eslint/parser",
      "plugins": [
         "@typescript-eslint"
      ],
      "extends": [
         "eslint:recommended",
         "plugin:@typescript-eslint/eslint-recommended",
         "plugin:@typescript-eslint/recommended",
         "prettier",
         "prettier/@typescript-eslint"
      ],
      "env": {
         "node": true
      },
      "parserOptions": {
         "ecmaVersion": 2019,
         "sourceType": "module"
      },
      "overrides": [
         {
            "files": [
               "gulpfile.js"
            ],
            "rules": {
               "@typescript-eslint/no-var-requires": "off",
               "@typescript-eslint/explicit-function-return-type": "off"
            }
         }
      ]
   },
   "prettier": {
      "singleQuote": true,
      "printWidth": 90,
      "trailingComma": "all"
   },
   "scripts": {
      "build:styles": "gulp all",
      "build:site": "eleventy",
      "build": "npm run build:styles && npm run build:site -- --quiet",
      "watch:styles": "gulp watch",
      "serve": "env DEV=true eleventy --quiet --serve",
      "serve:forestry": "DEV=true eleventy --quiet --serve",
      "clean": "rm -rf public"
   }
}
