{
   "name": "v5.chriskrycho.com",
   "version": "1.0.0",
   "description": "The fifth version of chriskrycho.com.",
   "main": "index.js",
   "repository": "https://github.com/chriskrycho/v5.chriskrycho.com",
   "author": "Chris Krycho <hello@chriskrycho.com>",
   "license": "MIT",
   "volta": {
      "node": "16.0.0",
      "npm": "7.10.0"
   },
   "devDependencies": {
      "@11ty/eleventy": "^0.12.1",
      "@types/cheerio": "^0.22.29",
      "@types/gulp-dart-sass": "^1.0.0",
      "@types/luxon": "^1.27.0",
      "@types/markdown-it": "^12.0.2",
      "@types/markdown-it-anchor": "^7.0.0",
      "@types/markdown-it-container": "^2.0.3",
      "@types/node": "^15.12.2",
      "@types/sass": "^1.16.0",
      "@types/serve-static": "^1.13.9",
      "@types/uslug": "^1.0.0",
      "@typescript-eslint/eslint-plugin": "^4.26.0",
      "@typescript-eslint/parser": "^4.27.0",
      "cheerio": "^1.0.0-rc.9",
      "del": "^6.0.0",
      "eslint": "7.28.0",
      "eslint-config-prettier": "^8.3.0",
      "eslint-plugin-prettier": "^3.4.0",
      "gulp": "^4.0.2",
      "gulp-dart-sass": "^1.0.2",
      "highlight.js": "^11.0.1",
      "highlightjs-glimmer": "^1.4.0",
      "luxon": "^1.27.0",
      "markdown-it": "^12.0.2",
      "markdown-it-abbr": "^1.0.4",
      "markdown-it-anchor": "^7.1.0",
      "markdown-it-deflist": "^2.0.3",
      "markdown-it-footnote": "^3.0.3",
      "markdown-it-implicit-figures": "^0.10.0",
      "markdown-it-sup": "^1.0.0",
      "prettier": "^2.3.1",
      "sass": "1.34.1",
      "striptags": "^3.2.0",
      "true-myth": "^4.1.1",
      "ts-node": "^10.0.0",
      "typescript": "^4.3.2",
      "typeset": "0.3.1",
      "uslug": "^1.0.4"
   },
   "eslintConfig": {
      "parser": "@typescript-eslint/parser",
      "plugins": [
         "@typescript-eslint"
      ],
      "extends": [
         "eslint:recommended",
         "plugin:@typescript-eslint/eslint-recommended",
         "plugin:@typescript-eslint/recommended",
         "prettier"
      ],
      "env": {
         "node": true
      },
      "parserOptions": {
         "ecmaVersion": 2019,
         "sourceType": "module"
      },
      "overrides": [
         {
            "files": [
               "gulpfile.js"
            ],
            "rules": {
               "@typescript-eslint/no-var-requires": "off",
               "@typescript-eslint/explicit-function-return-type": "off"
            }
         }
      ]
   },
   "prettier": {
      "singleQuote": true,
      "printWidth": 90,
      "trailingComma": "all"
   },
   "scripts": {
      "build:styles": "gulp all",
      "build:site": "eleventy",
      "build": "npm run build:styles && npm run build:site -- --quiet",
      "watch:site": "env DEV=true eleventy --quiet --watch",
      "watch:styles": "gulp watch",
      "watch": "npm run watch:site && npm run watch:styles",
      "serve": "env DEV=true eleventy --quiet --serve",
      "serve:forestry": "DEV=true eleventy --quiet --serve",
      "clean": "rm -rf public"
   }
}
