---
title: Archive
subtitle: Every single post on the site.
standalonePage: true
permalink: /archive/
subscribe:
    atom: "/feed.xml"
    json: "/feed.json"

---

{% extends 'base.njk' %}
{% import 'components/item.njk' as item %}
{% from 'components/archive-list.njk' import list %}

{%- block main -%}
<section class='content-block'>
{{item.header(type='archive', title=title, subtitle=subtitle, subscribe=subscribe)}}

{% set items = collections.live | excludingCollection(collections.notes) | excludingStandalonePages | excludingFeedOnly %}
{{ list(items | archiveByYears('NEW_FIRST'), idByCollection=true)}}
</section>
{%- endblock main -%}
